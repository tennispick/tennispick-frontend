{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "types": ["react"],
    "paths": {
      "@/*": ["app/src/*"],
      "@icons/*": ["app/src/assets/icons/*"],
      "@images/*": ["app/src/assets/images/*"],
      "@apis/*": ["app/src/apis/*"],
      "@components/*": ["app/src/components/*"],
      "@features/*": ["app/src/features/*"],
      "@data/*": ["app/src/data/*"],
      "@hooks/*": ["app/src/hooks/*"],
      "@containers/*": ["app/src/containers/*"],
      "@interfaces/*": ["app/src/interfaces/*"],
      "@lib/*": ["app/src/lib/*"],
      "@mocks/*": ["app/src/mocks/*"],
      "@queries/*": ["app/src/queries/*"],
      "@styles/*": ["app/src/styles/*"],
      "@utils/*": ["app/src/utils/*"],
      "@widgets/*": ["app/src/widgets/*"],
      "@/public/*": ["public/*"],
      "@/types/*": ["app/src/types/*"],
      "@/constants/*": ["app/src/constants/*"],
      "@/recipes/*": ["app/src/recipes/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/src/hooks/useMobile.tsx",
    ".next/types/**/*.ts",
    "styled-system"
  ],
  "exclude": ["node_modules"]
}
