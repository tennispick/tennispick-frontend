{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "types": ["react"],
    "paths": {
      "@/*": ["src/*"],
      "@icons/*": ["src/이전 파일들/assets/icons/*"],
      "@images/*": ["src/이전 파일들/assets/images/*"],
      "@apis/*": ["src/이전 파일들/apis/*"],
      "@components/*": ["src/이전 파일들/components/*"],

      "@features/*": ["src/이전 파일들/features/*"],

      "@data/*": ["src/이전 파일들/data/*"],
      "@hooks/*": ["src/이전 파일들/hooks/*"],
      "@containers/*": ["src/containers/*"],
      "@interfaces/*": ["src/이전 파일들/interfaces/*"],
      "@lib/*": ["src/이전 파일들/lib/*"],
      "@mocks/*": ["src/이전 파일들/mocks/*"],
      "@queries/*": ["src/이전 파일들/queries/*"],
      "@styles/*": ["src/이전 파일들/styles/*"],
      "@utils/*": ["src/이전 파일들/utils/*"],
      "@widgets/*": ["src/widgets/*"],
      "@/public/*": ["public/*"],
      "@/types/*": ["src/이전 파일들/types/*"],
      "@/constants/*": ["src/이전 파일들/constants/*"],
      "@/recipes/*": ["src/이전 파일들/recipes/*"],

      "@/pages/*": ["src/screens/*"],
      "@/layout/*": ["src/app/layout/*"],
      "@/provider/*": ["src/app/provider/*"],
      "@/features/*": ["src/features/*"],
      "@/shared/*": ["src/shared/*"],
      "@/widgets/*": ["src/widgets/*"],
      "@/entities/*": ["src/entities/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/이전 파일들/hooks/useMobile.tsx",
    ".next/types/**/*.ts",
    "styled-system"
  ],
  "exclude": ["node_modules"]
}
